# Fancy Shell prompt
export PS1='${debian_chroot:+($debian_chroot)}\[\033[01;33m\]\u@\H\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]\$ '

# Watch kamailio logs as in tail -f
alias kamtail='journalctl -u kamailio\* -f -a | kamlog'
alias kamtail-proxyusers='journalctl -u kamailio-proxyusers -f -a | kamlog'
alias kamtail-proxytrunks='journalctl -u kamailio-proxytrunks -f -a | kamlog'

# Watch rtpengien logs as in tail -f
alias rtptail='journalctl -u rtpengine -a -f'

# Kamcmd wrappers
alias kamcmd-proxyusers='/usr/sbin/kamcmd -s /tmp/kamailio_proxyusers_ctl'
alias kamcmd-proxytrunks='/usr/sbin/kamcmd -s /tmp/kamailio_proxytrunks_ctl'
alias kamcmd='echo Use kamcmd-proxyusers / kamcmd-proxytrunks'

# kamctl wrapper to avoid using it
alias kamctl='echo Disabled by Oasis Team, use systemctl/kamcmd instead, please'

